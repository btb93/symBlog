{% extends 'base.html.twig' %}
{% block title %}Commentaire index{% endblock %}
{% block body %}
    <h1>Commentaire index</h1>
    <a class="btn btn-primary" href="{{ path('commentaire_new') }}">cr√©er un nouveau</a>
    <p></p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Auteur</th>
                <th>Contenu</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for commentaire in commentaires %}
                <tr>
                    <td>
                        {{ commentaire.id }}</td>
                    <td>
                        {{ commentaire.auteur }}</td>
                    <td>
                        {{ commentaire.contenu }}</td>
                    <td>
                        {{ commentaire.createdAt ? commentaire.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('commentaire_show', {'id': commentaire.id}) }}">show</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="{{ path('commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="pagination ">
        {{ knp_pagination_render(commentaires) }}
    </div>
{% endblock %}