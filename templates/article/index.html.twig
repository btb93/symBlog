{% extends 'base.html.twig' %}
{% block title %}Article index{% endblock %}
{% block body %}
    <h1>Article index</h1>
    <a class="btn btn-primary" href="{{ path('article_new') }}">Cr√©er nouveau article</a>
    <p></p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Image</th>
                <th>CreateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>
                        {{ article.id }}</td>
                    <td>
                        {{ article.titre }}</td>
                    <td>
                        {{ article.contenu }}</td>
                    <td>
                        {{ article.image }}</td>
                    <td>
                        {{ article.createAt ? article.createAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="pagination ">
        {{ knp_pagination_render(articles) }}
    </div>
{% endblock %}